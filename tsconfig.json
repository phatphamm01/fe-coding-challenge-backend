{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2018", "dom"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*", "@types/**/*"]
}
